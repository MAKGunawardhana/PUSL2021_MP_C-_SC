@{
    List<Object> menuItems = new List<Object>();

    menuItems.Add(new
    {
        text = "General",
        separator = true,
    });
    menuItems.Add(new
    {
        text = "Dashboard",
        url = "/",
        
    });
    menuItems.Add(new
    {
        text = "Categories",
        url = "/Category",
        
    });
    menuItems.Add(new
    {
        text = "Transactions",
        
        url = "/Transaction"
    });

    menuItems.Add(new
    {
        text = "Extras",
        separator = true,
    });
    menuItems.Add(new
    {
        text = "User Details",
        
        url = "/Log"
    });
